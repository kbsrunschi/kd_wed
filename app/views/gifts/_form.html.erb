<%= form_for(@gift, html: { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name", class: "col-sm-3 col-xs-12 control-label" %>
    <div class="col-sm-9 col-xs-12">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-3 col-xs-12 control-label" %>
    <div class="col-sm-9 col-xs-12">
      <%= f.text_area :description, class: "form-control", placeholder: "Description of the item", rows: 5 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category, class: "col-sm-3 col-xs-12 control-label" %>
    <div class="col-sm-9 col-xs-12 align-left">
      <%= f.select :category, %w(kitchen decorations adventure home other).map {|i| [i,i]}, {}, { class: "form-control" } %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary" %>
    <%# link_to "Delete", @user, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete the user '#{@user.name}'?" } %>
    <%= link_to "Cancel", gifts_path, class: "btn btn-default" %>
    <%= link_to "Delete", @gift, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } if current_user.admin? %>
  </div>
<% end %>
