<%= form_tag user_sessions_path, :method => :post, class: "form-horizontal" do %>
  <div class="form-group">
    <%= label_tag :username, "Username", class: "col-sm-3 col-xs-12 control-label" %>
    <div class="col-sm-9 col-xs-12">
      <%= text_field_tag :username, nil, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, "Password", class: "col-sm-3 col-xs-12 control-label" %>
    <div class="col-sm-9 col-xs-12">
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :remember_me, "Remember Me", class: "col-sm-3 col-xs-12 control-label" %>
    <div class="col-sm-9 col-xs-12 align-left">
      <%= check_box_tag :remember_me, true, class: "form-control checkbox-fix" %>
    </div>
  </div>
  <div class="actions">
    <%= submit_tag "Login", class: "btn btn-primary" %>
  </div>
<% end %>
