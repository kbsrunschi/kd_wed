<div class="form-group">
  <%= f.label :attending, "Will be Attending", class: "col-sm-3 col-xs-12 control-label" %>
  <div class="col-sm-9 col-xs-12">
    <%= f.check_box :attending, id: "attending-checkbox", class: "form-control checkbox-fix" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :number_attending, class: "col-sm-3 col-xs-12 control-label" %>
  <div class="col-sm-9 col-xs-12 align-left">
    <%= f.select :number_attending, (0..10).map {|i| [i,i]}, {}, { class: "attending-only form-control" } %>
    <p style="font-size:.75em"><em>*Unless your invitation specifies a guest or family, please only RSVP for yourself. If you have any questions, just talk to John or Lydia.</em></p>
  </div>
</div>
<div class="form-group">
  <%= f.label :attendees, class: "col-sm-3 col-xs-12 control-label" %>
  <div class="col-sm-9 col-xs-12">
    <%= f.text_area :attendees, class: "attending-only form-control", placeholder: "Who from your household will be attending? (Please include yourself)", rows: 5 %>
  </div>
</div>
<div class="form-group">
  <%= f.label :songs, class: "col-sm-3 col-xs-12 control-label" %>
  <div class="col-sm-9 col-xs-12">
    <%= f.text_area :songs, class: "attending-only form-control", placeholder: "If you would like, please list three songs you would like to hear at the reception. NOTE: We will not be able to play all requests.", rows: 3 %>
  </div>
</div>
